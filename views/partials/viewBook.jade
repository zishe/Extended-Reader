h1.page-header {{book.title}}   
  small.author {{book.author}}

.row.view-book-page
  .span9
    dl.dl-horizontal
      dt Name
      dd {{book.title}}
      dt Author
      dd {{book.author}}
      //- dt Current Part
      //- dd {{book.partNum}}
      //- dt Curr
      //- dd {{book.parts[book.partNum].startPos}}
      dt Complete
      dd {{book.complete}} %
      dt Chars
      dd {{book.count.chars}}
      dt Chars without spaces
      dd {{book.count.charsNoSpaces}}
      dt Words
      dd {{book.count.words}}
      dt Read Words
      dd {{book.readWords}}
      dt Reading Time
      dd {{book.readingTime}}
      dt Created
      dd {{book.createdDate}}

      
  .span3.read-actions
    a.btn.btn-primary.btn-large.pull-left(href='/readBook/{{book._id}}') Per Page Read

.row.graph-block
  #graph