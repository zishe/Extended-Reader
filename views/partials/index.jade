include _navbar
div.container
  h2 Books
  table.table.table-hover
    thead
    tr
      th Title
      th Author
      th Complete
      th Reding time
      th
      th
      th
      th
      th
    tbody
      tr(ng-repeat='book in books | orderBy:updated')
        td
          a.pull-left(href='/book/{{book._id}}')
            h3.book-index-title {{book.title}}
        td {{book.author}}
        td {{book.complete}}
        td {{book.time}}
        td
          a(href='/readByLines/{{book._id}}', rel="tooltip", data-placement="bottom", title='Reading by Pieces')
            i.icon-fast-forward
        td
          a(href='/readBook/{{book._id}}', rel="tooltip", data-placement="bottom", title='Reading with Time tracking')
            i.icon-time
        td
          a(href='/memorize/{{book._id}}', rel="tooltip", data-placement="bottom", title='Reading with Memorization')
            i.icon-hdd
        td
          a(href='/editBook/{{book._id}}')
            i.icon-pencil
        td
          a(ng-click='deleteDialog(book)')
            i.icon-remove

          div#my-modal.modal.hide(class='modal-{{book._id}}')
            .modal-header
                button.close(type='button', data-dismiss='modal', ng-click='cancel(book)') Ã—
                h3 Are you sure?
              .modal-body
                p Are you sure you want to delete this book?
              .modal-footer
                a.btn(href='#', data-dismiss='modal', ng-click='cancel(book)') Cancel
                a.btn.btn-primary(href='#', ng-click='deleteBook(book)') Delete
