div.control-panel.clearfix(ng-show='showOpts')
  .hide-button.pull-left
    a(href='#', ng-click='showOpts=false') Hide Options
  .opts.well.well-small
    i.icon-minus-sign(ng-click='font_decrease();save_settings()')
    span.prop font size
    i.icon-plus-sign(ng-click='font_increase();save_settings()')
  .opts.well.well-small
    i.icon-minus-sign(ng-click='line_decrease();save_settings()')
    span.prop line height
    i.icon-plus-sign(ng-click='line_increase();save_settings()')
  .opts.well.well-small
    i.icon-minus-sign(ng-click='width_decrease();save_settings()')
    span.prop width
    i.icon-plus-sign(ng-click='width_increase();save_settings()')
  .opts.well.well-small
    i.icon-minus-sign(ng-click='part_decrease();save_settings()')
    span.prop part size
    i.icon-plus-sign(ng-click='part_increase();save_settings()')
